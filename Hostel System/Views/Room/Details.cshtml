@model Hostel_System.Model.RoomModel

@{
    ViewBag.Title = "Room " + @Html.DisplayFor(model => model.RoomName) ;
    Layout = "_Layout";
    var roomId = @Model.Id;
}

<h2>Room:  @Html.DisplayFor(model => model.RoomName)</h2>

<div>Description: <br />
    @Html.DisplayFor(model => model.Description)
    
    <br /><br />
    Max people: @Html.DisplayFor(model => model.MaxPeopleInRoom) <br />
    Price: @Html.DisplayFor(model => model.PriceForDay)$/Day <br />
    
</div>
<a class="btn btn-success" asp-controller="Reservation" asp-action="Book" asp-route-id="@Model.Id">Book Here!</a>
<br />
@if (User.IsInRole("Admin") || User.IsInRole("Manager"))
{
    <a class="nav-link text-dark" asp-area="" asp-controller="Reservation" asp-action="ActualReservedByRoom" asp-route-id="@roomId"> <h3>Actual Reserved</h3></a>
}
@if (User.IsInRole("Admin") || User.IsInRole("Manager"))
{
    <a class="btn btn-outline-danger" asp-area="" asp-controller="Room" asp-action="EditRoom" asp-route-id="@roomId">Edit Room</a>
}