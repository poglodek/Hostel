@model Hostel_System.Model.RoomModel

@{
    ViewBag.Title = "Add Room";
    Layout = "_Layout";
}

<h2>Add Room</h2>
<div>
    @{
        if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                @ViewBag.Error
            </div>
        }
        if (ViewBag.Success != null)
        {
            <div class="alert alert-success">
                @ViewBag.Success
            </div>
        }
    }
    
    
    
    <form asp-controller="Room" asp-action="AddRoom">
        
        <div class="form-group">
            <label for="exampleInputEmail1">Room Name:</label>
            <input asp-for="RoomName" type="text" class="form-control"   placeholder="Enter Room Name">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Description:</label>
            <input asp-for="Description" type="text" class="form-control"  placeholder="Enter Description">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Phone</label>
            <input asp-for="Phone" type="text" class="form-control" placeholder="Enter Phone">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Price For Day</label>
            <input asp-for="PriceForDay" type="text" class="form-control"  placeholder="Enter Price For Day">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Max People In Room:</label>
            <input asp-for="MaxPeopleInRoom" type="number" class="form-control"  placeholder="Enter Max People In Room">
        </div>
        <button type="submit" class="btn btn-primary">Add Room</button>
    </form>
</div>
