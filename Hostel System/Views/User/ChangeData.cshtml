@model Hostel_System.Model.UserModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
@if (ViewBag.Result is not null && ViewBag.Result == true)
{
    <div class=" alert alert-success">
        Data Changed!
    </div>
}
else if (ViewBag.Result is not null && ViewBag.Result == false)
{
    <div class="alert alert-danger">
        Data not changed!!!
    </div>
}
<h2>User Data</h2>
<form asp-controller="User" asp-action="ChangeData">
        
        <div class="form-group">
            <label for="exampleInputEmail1">First Name:</label>
            <input asp-for="FirstName" type="text" class="form-control" value="@Model.FirstName"  placeholder="Enter First Name">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Last Name:</label>
            <input asp-for="LastName" type="text" class="form-control"  value="@Model.LastName"  placeholder="Enter Last Name">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>:
            @Html.DisplayFor(x=> x.Email)
        </div>
        @Html.HiddenFor(x => x.Id)
        <div class="form-group">
            <label for="exampleInputEmail1">Phone:</label>
            <input asp-for="Phone" type="number"  value="@Model.Phone"  class="form-control"  placeholder="Enter Phone Number">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Address:</label>
            <input asp-for="Address" type="text"  value="@Model.Address"  class="form-control"  placeholder="Enter your Address">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Car Registration Number:</label>
            <input asp-for="CarRegistrationNumber" type="text"  value="@Model.CarRegistrationNumber"  class="form-control"  placeholder="Enter CarRegistrationNumber">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Birth Day:</label>
            @Html.EditorFor(model => model.BirthDay, 
                new { htmlAttributes = new { @class = "form-control date-picker" } })
        </div>
        <br/>
        <button type="submit" class="btn btn-primary">Change</button>
    </form>
